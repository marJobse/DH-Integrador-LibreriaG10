<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>

            <h3>Listado de Idiomas</h3>
            <ul>
                <% for( let i=0; i < languages.length; i++ ) { %>
                    <div class="botones_editar_borrar">
                        <li>
                            <a href="/languages/detail/<%= languages[i].id %>">
                                <%= languages[i].nombre %>
                            </a>
                        </li>

                        <form action="/languages/detail/<%= languages[i].id %>" method="get">
                            <p> <button class="boton_editar" type="submit">Detalle</button>
                            </p>
                        </form>
                        <form action="/languages/edit/<%= languages[i].id %>" method="get">
                            <p> <button class="boton_editar" type="submit">Editar</button>
                            </p>
                        </form>
                        <form action="/languages/delete/<%= languages[i].id %>" method="get">
                            <p> <button class="boton_borrar" type="submit">Borrar</button>
                            </p>
                        </form>

                    </div>
                    <% } %>

            </ul>

            </main>
            <%- include('../partials/footer.ejs') %>
    </body>