<!DOCTYPE html>
<html lang="es">

<%- include('partials/head.ejs') %>

    <body>
        <%- include('partials/header.ejs') %>

            <main>
                <section class="oferta">
                    <a href="/product/detail/4"><img src="images/oferta.jpg" alt="oferta">
                </section></a>
                <h2>Nuestros libros</h2>
                <section class="product-section flex">
                    <% for(let i=0; i < products.length; i++) { %>
                    <div class="product-item">
                        <div class="product-image-container"><a href="/product/detail/<%= products[i].id %>"><img class="product-item-img" src="/images/products/<%= products[i].imagen %>" alt=""></a></div>
                        <h4><a href="/product/detail/<%= products[i].id %>"><%= products[i].nombre %></a></h4>
                        <p>$<%= products[i].precio %></p>
                        <a class="boton-comprar" id="<%= products[i].id %>" href="/carrito" >Agregar al carrito</a>
                    </div>
                    <% } %>
                </section>
            </main>
            <%- include('partials/footer.ejs') %>
            <script src="/js/homeAddToCart.js"></script>

    </body>