<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>

            <h3>Listado de Idiomas</h3>
            <ul>
                <% for( let i=0; i < languajes.length; i++ ) { %>
                    <div class="botones_editar_borrar">
                        <li>
                            <a href="/languajes/detail/<%= languajes[i].id %>">
                                <%= languajes[i].nombre %>
                            </a>
                        </li>

                        <form action="/languajes/detail/<%= languajes[i].id %>" method="get">
                            <p> <button class="boton_editar" type="submit">Detalle</button>
                            </p>
                        </form>
                        <form action="/languajes/edit/<%= languajes[i].id %>" method="get">
                            <p> <button class="boton_editar" type="submit">Editar</button>
                            </p>
                        </form>
                        <form action="/languajes/delete/<%= languajes[i].id %>" method="get">
                            <p> <button class="boton_borrar" type="submit">Borrar</button>
                            </p>
                        </form>

                    </div>
                    <% } %>

            </ul>

            </main>
            <%- include('../partials/footer.ejs') %>
    </body>