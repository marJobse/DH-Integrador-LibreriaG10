<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <div class="relations-chart">

                <h3>Listado de Editoriales</h3>
                <ul>
                    <div>
                        <li class="list-item item-add">
                            <a href="/editorials/add">Agregar editorial (+)</a>
                        </li>
                        <li class="list-item table-header">
                            <div class="list-name">
                                Editorial
                            </div>
                            <div class="list-option">
                                Opciones
                            </div>
                        </li>
                    </div>
                    <% for( let i=0; i < editorials.length; i++ ) { %>
                        <div class="botones_editar_borrar">
                            <li class="list-item">
                                <div class="list-name">
                                    <a>
                                        <%= editorials[i].nombre %>
                                    </a>
                                </div>
                                <div class="list-option">
                                    <a href="/editorials/edit/<%= editorials[i].id %>">Editar</a>
                                    <span class="list-option-separator"> | </span>
                                    <a href="/editorials/delete/<%= editorials[i].id %>">Borrar</a>
                                </div>
                            </li>

                        </div>
                        <% } %>

                </ul>
                <div class="regresar-a-creacion">
                    <a href="/product/create">Ir a Crear Libro (+)</a>
                </div>
            </div>
            </main>
            <%- include('../partials/footer.ejs') %>
    </body>