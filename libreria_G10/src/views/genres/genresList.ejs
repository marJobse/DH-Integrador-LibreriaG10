<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <div class="relations-chart">
                <h3>Listado de Géneros</h3>
                <ul>
                    <div>
                        <li class="list-item item-add">
                            <a href="/genres/add">Agregar género (+)</a> 
                        </li>
                        <li class="list-item table-header">
                            <div class="list-name">
                                Género
                            </div>
                            <div class="list-option">
                                Opciones
                            </div>
                        </li>
                    </div>
                    <% for( let i=0; i < genres.length; i++ ) { %>
                        <div class="botones_editar_borrar">
                            <li class="list-item">
                                <div class="list-name">
                                    <a href="/genres/detail/<%= genres[i].id %>">
                                        <%= genres[i].nombre %> 
                                    </a>
                                </div>
                                <div class="list-option">
                                    <a href="/genres/edit/<%= genres[i].id %>">Editar</a>
                                    <span class="list-option-separator"> | </span> 
                                    <a href="/genres/delete/<%= genres[i].id %>">Borrar</a>
                                </div>
                            </li>
                            
                        </div>
                        <% } %>
            
            
                </ul>
            
            </div>
            </main>
            <%- include('../partials/footer.ejs') %>
    </body>