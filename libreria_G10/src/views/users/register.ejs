<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>
            <div id="user-form">
                <div class="row">
                    <div class="col-12">
                        <h3 class="products-title">Creá tu cuenta</h3>
                    </div>
                </div>


                <% if (typeof errors !='undefined' ) { %>
                    <p style="color: red"> Errores: </p>
                    <ul>
                        <% for (let i=0; i< errors.length;i++){%>
                            <li>
                                <%= errors[i].msg %>
                            </li>
                            <%} %>
                    </ul>
                    <% } %>

                        <form id="register-form" action="/users/" method="POST" enctype="multipart/form-data">
                            <div id="user-form">

                                <div class="col-12 col-md-6">
                                    <input type="text" id="nombre" name="nombre" placeholder="Andrea"
                                        class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <input type="text" id="apellido" name="apellido" placeholder="Perez"
                                        class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <input type="text" id="domicilio" name="domicilio"
                                        placeholder="Ej: Oceano Atlántico 123, Alma Buena, Argentina."
                                        class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <input type="text" id="telefono" name="telefono"
                                        placeholder="Teléfono"
                                        class="form-input">
                                </div>
                                <div class="col-12 col-md-6">
                                    <input type="email" id="email" name="email" placeholder="andrea.perez@email.com"
                                        class="form-input">
                                </div>
                                <div class="col-12">
                                    <input type="file" id="imagen" name="imagen">
                                </div>
                                <div class="col-12">
                                    <input type="password" id="password" name="password" placeholder="Contraseña"
                                        class="form-input">
                                </div>
                                <div class="col-12">
                                    <input type="password" id="password2" placeholder="Contraseña" class="form-input">
                                </div>
                                <div class="col-12 register-button-bar">
                                    <button type="submit" class="submit">Registrarse</button>
                                    <button type="reset" class="reset">Borrar</button>

                                </div>

                            </div>

                        </form>

            </div>
            <%- include('../partials/footer.ejs') %>
    </body>

</html>